<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Memore" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/memore_blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/memore_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
<!--        <item name="titleTextColor">@color/memore_blue</item>-->
<!--        <item name="subtitleTextColor">@color/memore_blue</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="titleTextColor">@color/gray</item>
        <item name="subtitleTextColor">@color/gray</item>
        <item name="colorControlNormal">@color/memore_blue</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/memore_blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

<!--        //set font-->

        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/memore_logo_final</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="editTextTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="HelperTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/memore_blue</item>
        <item name="android:textColorHint">@color/memore_blue</item>
        <item name="colorControlNormal">@color/memore_blue</item>
        <item name="colorControlActivated">@color/memore_blue</item>
        <item name="colorControlHighlight">@color/memore_blue</item>


    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/memore_blue</item>

    </style>

</resources>